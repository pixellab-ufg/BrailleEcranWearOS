<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="rotate_screen"
        android:summary="@string/pref_description_rotate_screen"
        android:title="@string/pref_title_rotate_screen" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="123456"
        android:entries="@array/pref_dots_layout_list"
        android:entryValues="@array/pref_dots_layout_list_values"
        android:key="dots_layout"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_dots_layout" />

</PreferenceScreen>
